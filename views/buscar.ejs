            <h1 class="titulo-nav">Buscar en la Colección</h1> 
        </nav>
        <a type="button" class="btn-cs" href="logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
    </header>

    <!--Contenido-->

    <div class="container">
        <form method="post" class="formulario" action="/buscar">
            <div class="radio">
                <input type="radio" name="estado" id="1">
                <label for="1">Numero Cátalogo</label> 
                <input type="radio" name="estado" id="2">
                <label for="2">Nombre de especie</label> 
            </div>

            <div class="input">
                <input type="text" name="datoChimbo" id="datoChimbo" readonly="readonly" class="datochimbo">
                <input class="form-control" name="dato" id="texto" type="text" placeholder="Escribe el numero de cátalago ó nombre de especie">
                <input type="button" id="btnMostrarArreglo" value="Listar" onclick="mostrarArreglo(); enviarTexto();" class="btn btn-outline-primary"></input>
                <div id="resultado">

                </div>

                <button class="btn btn-outline-primary">Buscar</button>
            </div>
        </form>
    </div>
