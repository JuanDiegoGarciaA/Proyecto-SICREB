<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="./js/script.js"></script>
    <style>
    body {  
      /* display: flex; */
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color:rgba(255,255,255,0.95);
    }
    </style>
    <title>Registro</title>
  </head>
  <body>

<div class="container">
    <div class="row">
        <div class="col-lg-12 shadow-lg p-3 mb-5">

        <div class="card border-bd-primary">
            <div class="card-header bg-bd-primary text-white">Registrarse</div>
            <div class="card-body text-bd-primary">
                <form action="/register" method="post">        
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombres</label>
                        <input required id="nombre" name="nombre" type="text" class="form-control">              
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellidos</label>
                        <input required id="apellido" name="apellido" type="text" class="form-control">              
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Correo de Usuario</label>
                        <input required id="user" name="user" type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="pass" class="form-label">Contraseña</label>
                        <input required id="pass" name="pass" type="password" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirme su Contraseña</label>
                        <input required id="pass2" type="password" class="form-control">
                        <!-- Error text -->
                        <span id="error" class="label label-info"></span>
                    </div>
                    <div class="mb-3">
                        <label for="afl" class="form-label">Afiliación Institucional</label>
                        <input required id="afl" name="afl" type="text" class="form-control">              
                    </div>                                     
            </div>
                    <div class="card-footer bg-transparent border-bd-primary text-center">
                        <a href="login" type="button" class="btn btn-secondary">Volver</a>
                        <button type="submit" class="btn btn-bd-primary">Registrar</button>
                    </div>
                </form>
        </div>   
    
        </div>
    </div>
</div>
</body>
</html>